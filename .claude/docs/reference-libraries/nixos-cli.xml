func NewSettings() *Settings {
	return &Settings{
		AutoRollback:   true,
		UseColor:       true,
		ConfigLocation: "/etc/nixos",
		Enter: EnterSettings{
			MountResolvConf: true,
		},
		Init:        InitSettings{},
		RootCommand: "sudo",
		Option: OptionSettings{
			MinScore:     1,
			Prettify:     true,
			DebounceTime: 25,
		},
	}
